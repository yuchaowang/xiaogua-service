<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaogua.comments.dal.mapper.BrandMapper">
    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from t_brand
        where deleted = 0
        <if test="keyword != null">
            and (name_cn like "%"#{keyword}"%" or name_en like "%"#{keyword}"%")
        </if>
        <if test="initals != null">
            and inital in
            <foreach collection="initals" item="inital" open="(" separator="," close=")">
                #{inital}
            </foreach>
        </if>
    </select>
    <select id="countWithDel" resultType="java.lang.Integer">
        select count(1)
        from t_brand
        where 1 = 1
        <if test="keyword != null">
            and (name_cn like "%"#{keyword}"%" or name_en like "%"#{keyword}"%")
        </if>
        <if test="initals != null">
            and inital in
            <foreach collection="initals" item="inital" open="(" separator="," close=")">
                #{inital}
            </foreach>
        </if>
    </select>
    <select id="findPage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_brand
        where deleted = 0
        <if test="keyword != null">
            and (name_cn like "%"#{keyword}"%" or name_en like "%"#{keyword}"%")
        </if>
        <if test="initals != null">
            and inital in
            <foreach collection="initals" item="inital" open="(" separator="," close=")">
                #{inital}
            </foreach>
        </if>
        order by
        <if test="sort == 'commentNum'">
            comment_num desc,
        </if>
        create_date desc,
        name_en
        limit #{index},#{pageSize}
    </select>
    <select id="findPageWithDel" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_brand
        where 1 = 1
        <if test="keyword != null">
            and (name_cn like "%"#{keyword}"%" or name_en like "%"#{keyword}"%")
        </if>
        <if test="initals != null">
            and inital in
            <foreach collection="initals" item="inital" open="(" separator="," close=")">
                #{inital}
            </foreach>
        </if>
        order by
        <if test="sort == 'commentNum'">
            comment_num desc,
        </if>
        create_date desc,
        name_en
        limit #{index},#{pageSize}
    </select>
    <select id="selectByName" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_brand
        where name_cn = #{name}
        or name_en = #{name}
    </select>
    <select id="selectByNames" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_brand
        where name_cn in
        <foreach collection="names" item="name" open="(" separator="," close=")">
            #{name}
        </foreach>
        or name_en in
        <foreach collection="names" item="name" open="(" separator="," close=")">
            #{name}
        </foreach>
    </select>
    <select id="selectByCodeWithoutDel" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_brand
        where code = #{code,jdbcType=VARCHAR}
        and deleted = 0
    </select>
    <select id="selectBrandByBrandCodesOrder" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_brand
        where deleted = 0
        and code in
        <foreach collection="codes" item="code" open="(" close=")" separator=",">
            #{code}
        </foreach>
        order by field(code,
        <foreach collection="codes" item="code" separator=",">
            #{code}
        </foreach>
        )
    </select>
</mapper>