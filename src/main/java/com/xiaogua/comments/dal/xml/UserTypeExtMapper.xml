<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaogua.comments.dal.mapper.UserTypeMapper">
    <select id="selectByUserCodeAndStatus" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_user_type
        where user_code = #{userCode}
        and status = #{status}
        and deleted = 0
    </select>
    <select id="selectByUserCode" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_user_type
        where user_code = #{userCode}
        and deleted = 0
    </select>
    <select id="selectByUserCodeAndType" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_user_type
        where user_code = #{userCode}
        and type = #{type}
        and deleted = 0
    </select>
</mapper>