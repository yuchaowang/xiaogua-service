<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaogua.comments.dal.mapper.UserTypeApplyMapper">
    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from t_user_type_apply
        where 1 = 1
        <if test="status != null">
            and status = #{status}
        </if>
    </select>
    <select id="findPage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_user_type_apply
        where 1 = 1
        <if test="status != null">
            and status = #{status}
        </if>
        order by
        create_date desc
        limit #{index},#{pageSize}
    </select>
    <select id="selectByUserTypeCode" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_user_type_apply
        where user_type_code = #{userTypeCode}
    </select>
</mapper>