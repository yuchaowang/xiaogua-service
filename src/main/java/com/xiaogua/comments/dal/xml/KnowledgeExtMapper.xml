<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaogua.comments.dal.mapper.KnowledgeMapper">
    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from t_knowledge
        where 1 = 1
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="keyword != null">
            and title like "%"#{keyword}"%"
        </if>
        <if test="userCode != null">
            and user_code = #{userCode}
        </if>
        <if test="categoryType != null">
            and category_type = #{categoryType}
        </if>
    </select>
    <select id="findPage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_knowledge
        where 1 = 1
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="keyword != null">
            and title like "%"#{keyword}"%"
        </if>
        <if test="userCode != null">
            and user_code = #{userCode}
        </if>
        <if test="categoryType != null">
            and category_type = #{categoryType}
        </if>
        order by
        <if test="sort == 'downloadNum'">
            download_num desc,
        </if>
        <if test="sort == 'credit'">
            credit desc,
        </if>
        <choose>
            <when test="prioritySort != null and prioritySort != ''">
                <if test="prioritySort == 'desc'">
                    priority desc,
                </if>
                <if test="prioritySort == 'asc'">
                    priority asc,
                </if>
            </when>
            <otherwise>priority desc,</otherwise>
        </choose>
        create_date desc
        limit #{index},#{pageSize}
    </select>
</mapper>